<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp">

            <TextView
                android:id="@+id/text_view_welcome_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/welcome_back_joe" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_power_cuts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="30dp"
                        app:cardCornerRadius="16dp">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/view_pager_power_cuts"
                            android:layout_width="204dp"
                            android:layout_height="132dp"
                            android:background="#FAEAE9"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/flash_slash" />


                        <TextView
                            android:id="@+id/text_view_power_cuts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:padding="6dp"
                            android:text="@string/power_cuts"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="30dp"
                        app:cardCornerRadius="16dp">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/view_pager_power_cuts_num"
                            android:layout_width="204dp"
                            android:layout_height="132dp"
                            android:background="#FFF8EB"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/timepiece_timer"
                            app:layout_constraintBottom_toBottomOf="parent" />


                        <TextView
                            android:id="@+id/text_view_power_cuts_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:padding="6dp"
                            android:text="@string/power_cuts_num"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="30dp"
                        app:cardCornerRadius="16dp">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/view_pager_energy_savings"
                            android:layout_width="204dp"
                            android:layout_height="132dp"
                            android:background="#FAEAE9" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/baseline_energy_savings_leaf_24" />


                        <TextView
                            android:id="@+id/text_view_energy_savings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:padding="6dp"
                            android:text="@string/energy_savings"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="30dp"
                        app:cardCornerRadius="16dp">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/view_pager_carbon_savings"
                            android:layout_width="204dp"
                            android:layout_height="132dp"
                            android:background="#FFF8EB" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/baseline_cloud_24" />


                        <TextView
                            android:id="@+id/text_view_carbon_savings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:padding="6dp"
                            android:text="@string/carbon_savings"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </HorizontalScrollView>


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/text_view_announcement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="16dp"
            android:text="@string/announcement"
            app:layout_constraintTop_toBottomOf="@id/card_view_power_cuts" />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="16dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/view_pager_feature_updates"
                            android:layout_width="match_parent"
                            android:layout_height="115dp"
                            android:background="@drawable/round_shape"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/image_view_additem"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/additem" />

                            <TextView
                                android:id="@+id/text_view_feature_updates"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/feature_updates"
                                android:textAllCaps="true"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/image_view_x_icon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="120dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/x_icon" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:padding="15dp"
                            android:text="@string/you_can_now_chat_with_the_support_team_within_the_app_just_click_on_support_in_the_left_menu" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:cardCornerRadius="16dp">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/view_pager_feature_updates2"
                            android:layout_width="match_parent"
                            android:layout_height="115dp"
                            android:background="@drawable/round_shape"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/image_view_lamp_charge"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/lamp_charge" />

                            <TextView
                                android:id="@+id/text_view_feature_updates2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/feature_updates"
                                android:textAllCaps="true"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/image_view_x_icon2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="120dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/x_icon" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:padding="15dp"
                            android:text="@string/due_to_insurgencies_in_surrounding_environs_the_estate_gate_will_now_be_closed_by_7_00pm_and_open_by_6_00am" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </HorizontalScrollView>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="16dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:cardCornerRadius="16dp">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/view_pager_consumption"
                            android:layout_width="140dp"
                            android:layout_height="50dp"
                            android:background="@color/black" />

                        <TextView
                            android:id="@+id/text_view_consumption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/consumption"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:cardCornerRadius="16dp">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/view_pager_average_run_time"
                            android:layout_width="140dp"
                            android:layout_height="50dp"
                            android:background="@drawable/round_shape" />

                        <TextView
                            android:id="@+id/text_view_average_run_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/average_run_time"
                            android:textSize="16sp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:cardCornerRadius="16dp">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/view_pager_carbon_reduction"
                            android:layout_width="140dp"
                            android:layout_height="50dp"
                            android:background="@drawable/round_shape" />

                        <TextView
                            android:id="@+id/text_view_carbon_reduction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/carbon_reduction"
                            android:textSize="16sp" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </HorizontalScrollView>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager_this_month1"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/round_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/this_month"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/chevron_down" />


        </androidx.cardview.widget.CardView>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/_500kwh" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="34dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/_400kwh" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="34dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/_300kwh" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="34dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/_200kwh" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="34dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/_100kwh" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="34dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/_0kwh" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"
                        android:fontFamily="sans-serif-light"
                        android:rotation="-70"
                        android:text="@string/apr_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"
                        android:fontFamily="sans-serif-light"
                        android:rotation="-70"
                        android:text="@string/apr_2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"
                        android:fontFamily="sans-serif-light"
                        android:rotation="-70"
                        android:text="@string/apr_3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"
                        android:fontFamily="sans-serif-light"
                        android:rotation="-70"
                        android:text="@string/apr_4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"
                        android:fontFamily="sans-serif-light"
                        android:rotation="-70"
                        android:text="@string/apr_5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"
                        android:fontFamily="sans-serif-light"
                        android:rotation="-70"
                        android:text="@string/apr_6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"
                        android:fontFamily="sans-serif-light"
                        android:rotation="-70"
                        android:text="@string/apr_7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"
                        android:fontFamily="sans-serif-light"
                        android:rotation="-70"
                        android:text="@string/apr_8" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"
                        android:fontFamily="sans-serif-light"
                        android:rotation="-70"
                        android:text="@string/apr_9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"
                        android:fontFamily="sans-serif-light"
                        android:rotation="-70"
                        android:text="@string/apr_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"
                        android:fontFamily="sans-serif-light"
                        android:rotation="-70"
                        android:text="@string/apr_11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"
                        android:fontFamily="sans-serif-light"
                        android:rotation="-70"
                        android:text="@string/apr_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"
                        android:fontFamily="sans-serif-light"
                        android:rotation="-70"
                        android:text="@string/apr_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="80dp"
                        android:fontFamily="sans-serif-light"
                        android:rotation="-70"
                        android:text="@string/apr_14" />


                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>




        

    </LinearLayout>


</ScrollView>