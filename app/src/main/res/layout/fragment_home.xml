<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.fragments.HomeFragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_view_welcome_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome back Joe,"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toTopOf="parent"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_power_cuts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_welcome_back"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager_main_image"
                android:layout_width="204dp"
                android:layout_height="132dp"
                android:background="@color/grey"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/flash_slash"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:id="@+id/text_view_power_cuts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="6dp"
                android:text="Power cuts"
                android:layout_gravity="center|top"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Announcement"
            app:layout_constraintTop_toBottomOf="@id/card_view_power_cuts"
            android:layout_marginTop="16dp"/>



    </LinearLayout>




</ScrollView>